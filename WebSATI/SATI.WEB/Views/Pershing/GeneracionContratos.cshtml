<div class="container-fluid" style="margin-top:20px;">
    @{ Html.RenderAction("Menu", "Pershing"); }
    <div id="contenido" class="col-md-12" style="background: #fff;margin-top: 20px; ">
        <h4 class="titulos-view">Contratos</h4>
        <hr />
        @{ var listado = ViewData["Fechas"] as List<DateTime>; }
        <div class="row">
            <div class="col-md-2">
                <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist">
                    <a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-pershing" aria-expanded="true" style="font-size: 12px;">Generacion de Contratos</a>
                </div>
            </div>
            <div class="col-md-10">
                <div class="tab-content" id="v-pills-tabContent">
                    <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-pershing">
                        @if (listado.Count > 0)
                        {
                            <div class="panel-fechas row" style="margin-bottom: 20px;border-radius: 5px;">
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="Fecha a Generar">Seleccione Fecha a Generar : </label>
                                        <select id="selectFecha" class="form-control" name="ddlfechasAGenerar">
                                            @foreach (DateTime fecha in ViewData["Fechas"] as List<DateTime>)
                                            {
                                                <option value="@fecha.Date.ToShortDateString()">@fecha.Date.ToShortDateString()</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-12" style="padding-top: 36px;">
                                    @using (Html.BeginForm("ExportarContratosPershing", "Archivo", FormMethod.Post, new { @id = "frmGenContratos" }))
                                    {
                                        <div class="col-md-3" style="float:right;">
                                            <input id="btnCargaPershing" type="submit" class="btn btn-raised btn-primary centrar-div btn-carga-pershing" style="height: 52px;position: absolute;top: -60px;float:right;" value="Generar" />
                                        </div>
                                    }
                                </div>  
                                <div class="col-md-12 tbl-pershing">
                                    <table id="example" class="table table-striped table-bordered" cellspacing="0" style="max-width: 300%;position: static;width: 300%;">
                                        <thead>
                                            <tr>
                                                <th>Fecha Proceso</th>
                                                <th>Folio</th>
                                                <th>Emisor</th>
                                                <th>Moneda</th>
                                                <th>Tipo/Inst</th>
                                                <th>Isin</th>
                                                <th>Nominales</th>
                                                <th>Precio</th>
                                                <th>Tipo Operacion</th>
                                                <th>Remuneracion</th>
                                                <th>Numero Cuenta</th>
                                                <th>Rut Cliente</th>
                                                <th>Nombre Cliente</th>           
                                            </tr>
                                        </thead>
                                        <tbody id="bodytblContratos">

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="col-md-12" style="padding: 16px;text-align: center;color: #8e8e8e;font-weight: 500;">
                                <p>No se encontraron contratos pendientes para ser generados.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>


        <div id="modal-container">

        </div>
    </div>
</div>


